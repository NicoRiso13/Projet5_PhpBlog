{% extends 'base.html.twig' %}


{% block title %}Page Posts {% endblock %}



{% block body %}

    <section class="section-posts-view">

    <h1 class="titre-page-post-view">Liste des Posts</h1>
    {% for post in posts %}
        <section class="bloc-post m-4 ">

            <div class="titre-post">
                <h1>{{ post.title }}</h1>
                <h5>Publié par : {{ post.author }} le {{ post.createdAt.format('d/m/Y') }}</h5>
            </div>
            <div class="soustitre-post">
                <h3>{{ post.subtitle }}</h3>
            </div>

            <div class="contenu-post">
                <p>{{ post.content }}</p>
            </div>

            <div class="btn-details">
                <button type="button" class="btn btn-primary">Voir détails</button>
            </div>


        </section>

    {% endfor %}
{% endblock %}